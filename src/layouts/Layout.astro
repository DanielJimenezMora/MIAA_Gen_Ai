---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			@keyframes float {
				0%, 100% { transform: translateY(0px) scale(1); opacity: 0.05; }
				50% { transform: translateY(-20px) scale(1.1); opacity: 0.08; }
			}
			.glass-orb {
				position: absolute;
				border-radius: 50%;
				background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
				filter: blur(60px);
				animation: float 8s ease-in-out infinite;
			}
		</style>
	</head>
	<body class="bg-linear-to-br from-gray-50 via-blue-50 to-purple-50 min-h-screen">
		<div class="fixed inset-0 overflow-hidden pointer-events-none">
			<div class="glass-orb" style="width: 500px; height: 500px; top: -10%; right: -10%; animation-delay: 0s;"></div>
			<div class="glass-orb" style="width: 400px; height: 400px; bottom: -10%; left: -10%; animation-delay: 3s;"></div>
			<div class="glass-orb" style="width: 350px; height: 350px; top: 40%; left: 50%; animation-delay: 1.5s;"></div>
		</div>
		<slot />
	</body>
</html>
